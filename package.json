		"@types/node": "^16.18.11",
		"@types/pg": "^8.11.10",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.10",
		"@types/react-transition-group": "^4.4.6",
		"@types/sanitize-html": "^2.11.0",
		"@types/three": "^0.150.1",
		"esbuild": "^0.19.2",
		"esbuild-plugin-copy": "^2.1.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-scss-transform": "^1.0.4",
		"react-test-renderer": "^18.3.1",
		"sass": "^1.58.3",
		"sharp": "^0.33.5",
