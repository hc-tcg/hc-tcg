{
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"noUnusedTemplateLiteral": "warn"
			},
			"correctness": {
				"noUnusedPrivateClassMembers": "warn",
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"semicolons": "asNeeded",
			"trailingCommas": "all",
			"bracketSpacing": false,
			"quoteStyle": "single"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	}
}
