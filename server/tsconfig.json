{
	"ts-node": {
		"require": ["tsconfig-paths/register"],
		"files": true,
		"esm": true
	},
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"common/*": ["../../common/*"],
			"types/*": ["../../common/types/*"]
		},
		"allowJs": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"strict": true,
		"noEmit": true,
		"noImplicitOverride": true,
		"esModuleInterop": true,
		"outDir": "./dist"
	},
	"include": ["src/*", "src/**.json"]
}
